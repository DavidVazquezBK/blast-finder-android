<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.aplicaciones.braya.franklin1.QR"
    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="198dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:onClick="escanerQR"
        android:text="Escanner QR"
        android:textColor="@color/abc_btn_colored_text_material"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.29"
            android:src="@drawable/escanear" />
    </LinearLayout>

</FrameLayout>
